{
  "manifest_version": 3,
  "name": "InfinityLead Exporter",
  "version": "1.0",
  "description": "InfinityLead helps you export LinkedIn leads with enriched data including emails, titles, companies, and more â€” all in one click.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/sales/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "icons/*"],
      "matches": ["http://localhost:8000/*", "https://localhost:8000/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
